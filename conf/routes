# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# List of controller showing a page
GET     /                           controllers.HomeController.index
GET     /buttons                    controllers.HomeController.buttons
GET     /cards                      controllers.HomeController.cards
GET     /colors                     controllers.HomeController.colors
GET     /borders                    controllers.HomeController.borders
GET     /animations                 controllers.HomeController.animations
GET     /others                     controllers.HomeController.others
GET     /login                      controllers.HomeController.login
GET     /register                   controllers.HomeController.register
GET     /forgot                     controllers.HomeController.forgot
GET     /error                      controllers.HomeController.error
GET     /blank                      controllers.HomeController.blank
GET     /charts                     controllers.HomeController.charts
GET     /tables                     controllers.HomeController.tables

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
